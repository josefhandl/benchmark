
CC=clang++

CFLAGS=-g -Wall -Wextra -Werror -pedantic --target=x86_64-pc-linux -fdeclspec

LIBS=sse.so avx.so avx512f.so

.PHONY: all libs clean

all: benchmark libs

libs: $(LIBS)

%.so: %.cpp
	$(CC) $(CFLAGS) -fPIC -shared -m$(patsubst %.so,%,$@) -o $@ $^

benchmark: benchmark.cpp
	$(CC) $(CFLAGS) -ldl -o $@ $^

clean:
	rm -f benchmark $(LIBS)
